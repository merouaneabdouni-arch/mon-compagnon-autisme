                                    color: 'white',
                                    border: 'none',
                                    borderRadius: '15px',
                                    padding: '15px 40px',
                                    fontSize: '20px',
                                    cursor: 'pointer',
                                    fontWeight: 'bold',
                                    boxShadow: `0 4px 15px ${selectedEmotion.color}66`
