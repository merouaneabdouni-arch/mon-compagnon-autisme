                if (!selectedExercise) {
                    return (
                        <div style={{
                            minHeight: '100vh',
                            background: 'linear-gradient(135deg, #11998e 0%, #38ef7d 100%)',
                            padding: '20px'
                        }}>
                            <button onClick={() => setView('child')} style={{
                                background: 'white',
                                border: 'none',
