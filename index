                                <button key={routine.id} onClick={() => {
                                    setSelectedRoutine(routine);
                                    setCurrentStep(0);
                                    setView('routine');
                                }} style={{
                                    background: 'white',
                                    border: 'none',
                                    borderRadius: '25px',
                                    padding: '40px 30px',
                                    cursor: 'pointer',
